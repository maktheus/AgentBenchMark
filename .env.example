# ðŸ“‹ .env.example - Environment Variables Template

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=benchmark_db
DB_USER=benchmark_user
DB_PASSWORD=benchmark_password
DATABASE_URL=postgresql://benchmark_user:benchmark_password@localhost:5432/benchmark_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Agent API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Storage Configuration
STORAGE_PATH=./data
LOGS_PATH=./logs

# Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Performance Configuration
MAX_CONCURRENT_BENCHMARKS=10
DEFAULT_TIMEOUT_SECONDS=300

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=notifications@benchmark.example.com